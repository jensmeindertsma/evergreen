{
  "name": "@jensmeindertsma/evergreen",
  "packageManager": "pnpm@9.12.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm-run-all --sequential --print-label build:* ",
    "build:app": "remix vite:build",
    "build:server": "tsx ./scripts/build-server.ts",
    "clean": "rimraf ./build",
    "database:generate": "prisma generate",
    "database:migrate": "prisma migrate dev",
    "database:reset": "prisma migrate reset",
    "dev": "tsx ./server/serve.ts",
    "format:fix": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint --flag unstable_ts_config --fix --cache .",
    "lint:check": "eslint --flag unstable_ts_config --cache .",
    "serve": "cross-env NODE_ENV=production node ./build/serve.js",
    "typecheck": "prisma generate && tsc"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@remix-run/express": "^2.12.1",
    "@remix-run/node": "^2.12.1",
    "@remix-run/react": "^2.12.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.21.0",
    "isbot": "^5.1.17",
    "morgan": "^1.10.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@remix-run/dev": "^2.12.1",
    "@types/compression": "^1.7.5",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.12.0",
    "jiti": "^2.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prisma": "^5.20.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0",
    "vite": "^5.4.8",
    "vite-tsconfig-paths": "^5.0.1"
  }
}
